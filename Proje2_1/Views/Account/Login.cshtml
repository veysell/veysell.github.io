@model EntityLayer.Entities.User
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Login | E-Elektronikcim</title>
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
</head><!--/head-->

<body style="background-color:#f8f9fa">

    <style>

        input {
            border-color: #987687;
            border-radius: 5px;
            text-shadow: 1px #000000;
           
        }
        input:hover {
            border-color: #6e588e;
            border-radius: 8px;
            box-shadow: 0 0 11px;
        }
    </style>

    <div class="container mt-5">
        <div class="row">
            
                <div class="col-md-6">
                    <h2>Giriş</h2>
                    <hr />
                    <form action="/Account/Login" method="post">
                        <div class="form-group">
                            <input type="email" placeholder="Email Adresi" name="Email" />
                        </div>
                        <div class="form-group mb-4">
                            <small class="form-text text-muted">@ViewBag.hata</small>
                        </div>
                        <div class="form-group mb-4">
                            <input type="password" placeholder="Şifre" name="Password" />
                        </div>
                        <div class="form-group mb-2">
                            <button type="submit" class="btn btn-primary">Giriş Yap</button>
                        </div>
                        <a href="/User/PasswordReset" class="btn btn-outline-secondary btn-sm">Şifre Sıfırlama</a>
                    </form>
                </div>
                <div class="col-md-6">
                    <h2>Kayıt</h2>
                    <hr />
                    <form action="/Account/Register" method="post">
                        <div class="form-group mb-4">
                            <input type="text" placeholder="Ad" name="Name" required />
                            @Html.ValidationMessageFor(x => x.Name, "", new { @style = "color:red" })
                        </div>
                        <div class="form-group mb-4">
                            <input type="text" placeholder="Soyad" name="SurName" required />
                            @Html.ValidationMessageFor(x => x.SurName, "", new { @style = "color:red" })
                        </div>
                        <div class="form-group mb-4">
                            <input type="email" placeholder="Email Adresi" name="Email" required maxlength="50" />
                            @Html.ValidationMessageFor(x => x.Email, "", new { @style = "color:red" })
                        </div>
                        <div class="form-group mb-4">
                            <input type="text" placeholder="Kullanıcı Adı" name="UserName" required />
                            @Html.ValidationMessageFor(x => x.UserName, "", new { @style = "color:red" })
                        </div>
                        <div class="form-group mb-4">
                            <input type="password" placeholder="Şifre" name="Password" required maxlength="50" />
                            @Html.ValidationMessageFor(x => x.Password, "", new { @style = "color:red" })
                        </div>
                        <div class="form-group mb-4">
                            <input type="password" placeholder="Şifre Tekrar" name="RePassword" required maxlength="50" />
                            @Html.ValidationMessageFor(x => x.RePassword, "", new { @style = "color:red" })
                        </div>
                        <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                    </form>
                </div>

            
        </div>
    </div>

</body>
</html>
